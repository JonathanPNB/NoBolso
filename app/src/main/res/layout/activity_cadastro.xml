<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="unifimes.tcc.nobolso.CadastroActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Preencha o FormulÃ¡rio"
        android:id="@+id/textView_infcadastro"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nome"
        android:id="@+id/textView_nome"
        android:layout_below="@+id/textView_infcadastro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Login"
        android:id="@+id/textView_login"
        android:layout_below="@+id/textView_nome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Senha"
        android:id="@+id/textView_senha"
        android:layout_below="@+id/textView_login"
        android:layout_alignRight="@+id/textView_repsenha"
        android:layout_alignEnd="@+id/textView_repsenha"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_nome"
        android:layout_above="@+id/textView_login"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView_repsenha"
        android:layout_toEndOf="@+id/textView_repsenha" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_login"
        android:layout_alignBottom="@+id/textView_login"
        android:layout_alignRight="@+id/editText_nome"
        android:layout_alignEnd="@+id/editText_nome"
        android:layout_alignLeft="@+id/editText_senha"
        android:layout_alignStart="@+id/editText_senha" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Repetir Senha"
        android:id="@+id/textView_repsenha"
        android:layout_below="@+id/textView_senha"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_senha"
        android:layout_alignBottom="@+id/textView_senha"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView_repsenha"
        android:layout_toEndOf="@+id/textView_repsenha" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_repsenha"
        android:layout_alignBottom="@+id/textView_repsenha"
        android:layout_toRightOf="@+id/textView_repsenha"
        android:layout_alignRight="@+id/editText_login"
        android:layout_alignEnd="@+id/editText_login" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:id="@+id/button_cancelar"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:id="@+id/button_cadastrar"
        android:layout_alignTop="@+id/button_cancelar"
        android:layout_alignRight="@+id/editText_repsenha"
        android:layout_alignEnd="@+id/editText_repsenha" />

</RelativeLayout>
